<div class="block-center mt-4 wd-xl">
   <!-- START card-->
   <div class="card card-flat">
      <div class="card-header text-center bg-dark">
         <a href="#">
            <img class="block-center rounded" src="<%= image_path('angle/logo.png') %>" alt="Image" />
         </a>
      </div>
      <div class="card-body">
         <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
         <%= form_for(:session, url: sessions_path) do |f| %>
            <div class="form-group">
               <div class="input-group with-focus">
                    <%= f.email_field :email, placeholder: "Enter Email", class: "form-control"%>
               </div>
            </div>

            <div class="form-group">
               <div class="input-group with-focus">
                    <%= f.password_field :password, placeholder: "Enter Password", class: "form-control"%>
               </div>
            </div>
            <%= f.submit "Login", class:"btn btn-block btn-primary mt-3" %>
         <% end %>
         <p class="pt-3 text-center">Need to Signup?</p>
         <%= link_to "Register Now", new_user_path, class: "btn btn-block btn-secondary" %>
      </div>
   </div>
   <!-- END card-->
   <div class="p-3 text-center">
      <span class="mr-2">&copy;</span>
      <span>2020</span>
      <span class="mr-2">-</span>
      <span>Angle</span>
      <br/>
      <span>Bootstrap Admin Template</span>
   </div>
</div>