<%= form_for(@product) do |f| %>
    <div class="form-horizontal">
        <div class="form-group row">
            <%= f.label :product_name , class: "col-xl-2 col-form-label" %>
            <div class="col-xl-10">
                <%= f.text_field :product_name, class:"form-control", placeholder: "Product Name"%>
            </div>  
        </div>
        <div class="form-group row">
            <%= f.label :product_description , class: "col-xl-2 col-form-label" %>
            <div class="col-xl-10">
                <%= f.text_area :product_description, class:"form-control", placeholder: "Product Description"%>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :price , class: "col-xl-2 col-form-label" %>
            <div class="col-xl-10">
                <%= f.number_field :price, class:"form-control", placeholder: "Price"%>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :quantity , class: "col-xl-2 col-form-label" %>
            <div class="col-xl-10">
                <%= f.number_field :quantity, class:"form-control", placeholder: "Quantity"%>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-xl-10">
                <%= f.submit class:"btn btn-sm btn-success"%>
            </div>
        </div>
    </div>
<% end %>