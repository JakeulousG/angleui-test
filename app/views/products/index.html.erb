<div class="content-heading">
    Products
    <% if admin_signed_in? %>
        <div class="ml-auto">
            <div class="btn-group">
                <button class="btn btn-link" data-toggle="dropdown">
                    <em class="fa fa-ellipsis-v fa-lg"></em>
                </button>
                <div class="dropdown-menu dropdown-menu-right-forced animated fadeInLeft" role="menu">
                    <a href="" class="dropdown-item" data-toggle="modal" data-target="#myModalLarge">
                        <em class='fa-fw fa fa-plus mr-2'></em> Add New Product
                    </a>
                </div>
            </div>
        </div>
    <% end %>
</div>
<table class="table table-striped table-hover w-100" id="datatable1">
    <thead>
        <tr>
            <th style="width:80px;">
            <strong>ID</strong>
            </th>
            <th>
            <strong>Produce Name</strong>
            </th>
            <th>
            <strong>Price</strong>
            </th>
            <th style="width:80px;">
            <strong>Quantity</strong>
            </th>
            <th class="text-center">
            <strong>Actions</strong>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.product_name %></td>
                <td><%= product.price %></td>
                <td><%= product.quantity %></td>
                <td class="text-center">
                    <%= link_to raw("<em class='fa fa-eye'></em> View"), product_path(product), class:"btn btn-sm btn-info" %>
                    <%= link_to raw("<em class='fa fa-pen'></em> Edit"), edit_product_path(product), class:"btn btn-sm btn-primary" %>
                    <%= link_to raw("<em class='fa fa-trash'></em> Delete"), product_path(product), class:"btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>


<% content_for :body_area do %>
    <!-- Modal Large-->
    <div class="modal fade" id="myModalLarge" tabindex="-1" role="dialog" aria-labelledby="myModalLabelLarge" aria-hidden="true">
       <div class="modal-dialog modal-lg">
          <div class="modal-content">
             <div class="modal-header">
                <h4 class="modal-title" id="myModalLabelLarge">Add new Product</h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                </button>
             </div>
             <div class="modal-body">
                <%= render 'form' %>
             </div>
          </div>
       </div>
    </div>
<% end %>