<div class="content-heading">
    Products
    <% if logged_in? %>
        <div class="ml-auto">
            <div class="btn-group">
                <button class="btn btn-link" data-toggle="dropdown">
                    <em class="fa fa-ellipsis-v fa-lg"></em>
                </button>
                <div class="dropdown-menu dropdown-menu-right-forced animated fadeInLeft" role="menu">
                    <%= link_to raw("<em class='fa-fw fa fa-plus mr-2'></em> New Product"), new_product_path, class:"dropdown-item" %>
                </div>
            </div>
        </div>
    <% end %>
</div>
<table class="table table-striped table-hover w-100" id="datatable1">
    <thead>
        <tr>
            <th style="width:80px;">
            <strong>ID</strong>
            </th>
            <th>
            <strong>Produce Name</strong>
            </th>
            <th>
            <strong>Product Desciription</strong>
            </th>
            <th>
            <strong>Price</strong>
            </th>
            <th style="width:80px;">
            <strong>Quantity</strong>
            </th>
            <% if logged_in? %>
            <th class="text-center">
            <strong>Actions</strong>
            </th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.product_name %></td>
                <td><%= product.product_description%></td>
                <td><%= product.price %></td>
                <td><%= product.quantity %></td>
                <% if logged_in? %>
                <td class="text-center">
                    <%= link_to raw("<em class='fa fa-eye'></em>"), product_path(product), class:"btn btn-sm btn-info" %>
                    <%= link_to raw("<em class='fa fa-pen'></em>"), edit_product_path(product), class:"btn btn-sm btn-primary" %>
                    <%= button_to product_path(product), class:"btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' }  do %>
                        <em class='fa fa-trash'></em>
                    <% end %>
                </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>