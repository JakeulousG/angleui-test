<%= form_for(@user) do |f| %>
    <div class="form-group row">
        <%= f.label :name, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.text_field :name, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :bio, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.text_area :bio, rows: "4", class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :email, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.text_field :email, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :password, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.password_field :password, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :password_confirmation, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.password_field :password_confirmation, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-10">
            <%= f.submit class:"btn btn-info"%>
        </div>
    </div>
<% end %>