<div class="unwrap">
    <% if @cover_photo.attached? %>
        <div style="background-image: url(<%= url_for(@cover_photo) %>)" class="bg-cover">
    <% else %>
        <div style="background-image: url(<%= asset_path 'angle/profile-bg.jpg' %>)" class="bg-cover">
    <% end %>
        <div class="p-4 text-center text-white">
            <% if @avatar.attached? %>
                <%= image_tag @avatar, class:"img-thumbnail rounded-circle thumb128"%>
            <% else %>
                <img class="img-thumbnail rounded-circle thumb128" src="<%= image_path('angle/user/09.jpg') %>" alt="Image" />
            <% end %>
            <h3 class="m-0"><%= @user.name %></h3>
            <p><%= @user.email%></p>
        </div>
    </div>
    <div class="p-3">
        <div class="row">
            <div class="col-lg-8">
                <div class="card card-default mb-3">
                    <div class="card-header">User Information</div>
                    <div class="card-body">
                        <h5 class="card-title">Bio</h5>
                        <p class="card-text"><%= @user.bio %></p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card card-default">
                    <div class="card-body">
                        <% if current_admin.role == "Super Admin" || current_admin.role == "Admin"  %>
                            <div class="row">
                                <div class="col-12 d-flex justify-content-center">
                                    <%= link_to "Edit User",edit_user_path(@user), class: "btn btn-pill-left btn-info"%>
                                    <%= link_to raw("Delete User"),
                                        user_path(@user), class: "btn btn-pill-right btn-danger",
                                        data: { confirm_swal: '', remote: true, method: 'DELETE' }
                                    %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
