<div class="block-center mt-4 wd-xl">
   <!-- START card-->
   <div class="card card-flat">
      <div class="card-header text-center bg-dark">
         <a href="#">
            <img class="block-center rounded" src="<%= image_path('angle/logo.png') %>" alt="Image" />
         </a>
      </div>
      <div class="card-body">
         <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
         <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "sign_in", :class => "span3"}, :remote => true, :format => :json) do |f| %>
            <div class="form-group">
               <div class="input-group with-focus">
                    <%= f.email_field :email, placeholder: "Enter Email", class: "form-control", autofocus: true, autocomplete: "email" %>
               </div>
            </div>

            <div class="form-group">
               <div class="input-group with-focus">
                    <%= f.password_field :password, placeholder: "Enter Password", class: "form-control", autocomplete: "current-password"%>
               </div>
            </div>
            <%= f.submit "Login", class:"btn btn-block btn-primary mt-3" %>
         <% end %>
      </div>
   </div>
   <!-- END card-->
</div>