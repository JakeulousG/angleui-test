<div class="block-center mt-4 wd-xl">
   <!-- START card-->
   <div class="card card-flat">
      <div class="card-header text-center bg-dark">
         <a href="#">
            <img class="block-center" src="<%= image_path('angle/logo.png') %>" alt="Image" />
         </a>
      </div>
      <div class="card-body">
         <p class="text-center py-2">SIGNUP TO GET INSTANT ACCESS.</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
                <%= f.label :email, class: "text-muted" %>
                <div class="input-group with-focus">
                    <%= f.email_field :email, class: "form-control border-right-0", autofocus: true, autocomplete: "email"  %>
                    <div class="input-group-append">
                        <span class="input-group-text text-muted bg-transparent border-left-0">
                            <em class="fa fa-envelope"></em>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :name, class: "text-muted" %>
                <div class="input-group with-focus">
                    <%= f.text_field :name, class: "form-control border-right-0" %>
                    <div class="input-group-append">
                        <span class="input-group-text text-muted bg-transparent border-left-0">
                            <em class="fa fa-envelope"></em>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password, class: "text-muted" %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                <div class="input-group with-focus">
                    <%= f.password_field :password, class: "form-control border-right-0", autocomplete: "new-password" %>
                    <div class="input-group-append">
                        <span class="input-group-text text-muted bg-transparent border-left-0">
                            <em class="fa fa-lock"></em>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, class: "text-muted" %>
                <div class="input-group with-focus">
                    <%= f.password_field :password_confirmation, class: "form-control border-right-0", autocomplete: "new-password" %>
                    <div class="input-group-append">
                        <span class="input-group-text text-muted bg-transparent border-left-0">
                            <em class="fa fa-lock"></em>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :bio, class: "text-muted" %>
                <div class="input-group with-focus">
                    <%= f.text_area :bio, class: "form-control border-right-0", rows: '4' %>
                    <div class="input-group-append">
                        <span class="input-group-text text-muted bg-transparent border-left-0">
                            <em class="fa fa-pen"></em>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :role, class: "text-muted" %>
                <%= f.select :role, options_for_select([
                                        Admin.roles.keys
                                    ], selected: f.object.role), {}, class: "custom-select"
                                %>
            </div>
            <%= f.submit label: "Create Account", class:"btn btn-block btn-primary mt-3" %>
        <% end %>
        
         <p class="pt-3 text-center">Have an account?</p>
        <%= render "devise/shared/links" %>
      </div>
   </div>
   <!-- END card-->
   <div class="p-3 text-center">
      <span class="mr-2">&copy;</span>
      <span>2020</span>
      <span class="mr-2">-</span>
      <span>Angle</span>
      <br/>
      <span>Bootstrap Admin Template</span>
   </div>
</div>
