<div class="unwrap">
    <div style="background-image: url(<%= asset_path 'angle/profile-bg.jpg' %>)" class="bg-cover">
        <div class="p-4 text-center text-white">
            <img class="img-thumbnail rounded-circle thumb128" src="<%= image_path('angle/user/09.jpg') %>" alt="Image" />
            <h3 class="m-0"><%= @admin.name %></h3>
            <p><%= @admin.email%></p>
        </div>
    </div>
    <div class="p-3">
        <div class="row">
            <div class="col-lg-8">
                <div class="card card-default mb-3">
                    <div class="card-header">Admin Information</div>
                    <div class="card-body">
                        <h5 class="card-title">Bio</h5>
                        <p class="card-text"><%= @admin.bio %></p>
                        <%= link_to 'Action', '#link-to-some-page', data: { confirm_swal: 'hello world' }%>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card card-default">
                    <div class="card-body">
                        <% if @admin == current_admin %>
                            <div class="row">
                                <div class="col-6">
                                    <%= link_to edit_admin_registration_path(@admin), class: "btn btn-labeled btn-info mb-2 mx-2"  do %>
                                        <span class="btn-label"><i class="fa fa-pen"></i>
                                        </span>Edit Admin 
                                    <% end %>
                                </div>

                                <div class="col-6">
                                    <%= link_to  admin_registration_path(@admin), class: "btn btn-labeled btn-danger mb-2 mx-1", data: { confirm_swal: '', remote: true, method: 'DELETE' }  do %>
                                        <span class="btn-label"><i class="fa fa-trash"></i>
                                        </span>Delete Admin
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>