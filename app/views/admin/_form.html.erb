<%= form_for(@admin, url: admin_index_path(@admin), method: :post) do |f| %>
    <div class="form-group row">
        <%= f.label :name, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.text_field :name, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :bio, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.text_area :bio, rows: "4", class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :email, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.text_field :email, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :password, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.password_field :password, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :password_confirmation, class:"text-bold col-xl-2 col-md-3 col-4 col-form-label text-right"%>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.password_field :password_confirmation, class:"form-control" %>                                
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :role, class: "text-bold col-xl-2 col-md-3 col-4 col-form-label text-right" %>
        <div class="col-xl-10 col-md-9 col-8">
        <%= f.select :role, options_for_select([
                                ["Super Admin"],
                                ["Admin"],
                                ["Staff"]
                            ], selected: f.object.role), {}, class: "custom-select"
                        %>
        </div>        
    </div>
    <div class="form-group row">
        <%= f.label :avatar, class: "text-bold col-xl-2 col-md-3 col-4 col-form-label text-right" %>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.file_field :avatar, class: "form-control filestyle", classbutton:"btn btn-secondary", lassinput:"form-control inline", icon:"&lt;span class='fa fa-upload mr'&gt;&lt;/span&gt;"%>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :cover_photo, class: "text-bold col-xl-2 col-md-3 col-4 col-form-label text-right" %>
        <div class="col-xl-10 col-md-9 col-8">
            <%= f.file_field :cover_photo, class: "form-control filestyle", classbutton:"btn btn-secondary", lassinput:"form-control inline", icon:"&lt;span class='fa fa-upload mr'&gt;&lt;/span&gt;"%>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <%= f.submit class:"btn btn-block btn-info"%>
        </div>
    </div>
<% end %>